<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="25dp"
        android:background="@drawable/custom_dialog">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/yesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:fontFamily="@font/gotham_bold"
                android:text="Yes"
                android:textColor="#0066FF"
                app:layout_constraintEnd_toStartOf="@+id/noTextView"
                app:layout_constraintTop_toTopOf="@+id/noTextView" />

            <TextView
                android:id="@+id/noTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/gotham_bold"
                android:text="No"
                android:textColor="#0066FF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/alertTextView2" />

            <TextView
                android:id="@+id/alertTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you sure you want"
                android:textSize="16sp"
                android:fontFamily="@font/gotham_book"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/alertTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to delete this ?"
                android:textSize="16sp"
                android:fontFamily="@font/gotham_book"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/alertTextView1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</RelativeLayout>